// Area de un circulo

#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main() {
	float radio, area;
	float pi = 3.1416;

	cout<<"La area de un circulo"<<endl;
	cout<<"Por favor ingrese el radio: ";
	cin>>radio;
	area = pi*pow(radio, 2);
	cout<<"El area es: "<<area<<endl;
	cout<<"Daiki chibana";
getch();
}

pseudocodigo

Proceso Areacirculo
	Escribir "Ingrese radio: "
	Leer radio
	area <-3.1416*(radio*radio)
	Escribir area
FinProceso


